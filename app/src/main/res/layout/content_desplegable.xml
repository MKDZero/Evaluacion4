<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.inacap.puntaarenas.evaluacion4.DesplegableActivity"
    tools:showIn="@layout/app_bar_desplegable">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/btnvideo"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="400dp"
            app:srcCompat="@drawable/tarjetas_video" />

        <ImageView
            android:id="@+id/btndesktop"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="270dp"
            android:clickable="true"
            app:srcCompat="@drawable/desktop" />

        <ImageView
            android:id="@+id/btnsonido"
            android:layout_width="200dp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/tarjetas_sonido" />

        <ImageView
            android:id="@+id/btnmonitores"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="160dp"
            app:srcCompat="@drawable/monitores" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="304dp"
                android:layout_height="120dp"
                android:paddingRight="180dp"
                app:srcCompat="@drawable/imagen4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="304dp"
                android:layout_height="120dp"
                android:paddingRight="180dp"
                app:srcCompat="@drawable/imagen3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="305dp"
                android:layout_height="150dp"
                android:paddingRight="180dp"
                app:srcCompat="@drawable/imagen1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="305dp"
                android:layout_height="120dp"
                android:paddingRight="180dp"
                app:srcCompat="@drawable/imagen2" />

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
